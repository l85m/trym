.well{style: "margin-top: 20px; width: 100%; overflow-x: scroll; height: 114px;"}
  %div{style: "width: #{(current_user.linked_accounts.count+1) * 155}px; height: 80px;"}
    .empty-linked-account-index-item.text-center
      =link_to new_linked_account_path, remote: true do 
        .table-div{style: "width: 100%; height: 100%;"}
          .vertical-center
            %div
              %i.fa.fa-credit-card.fa-2x
            %div
              %i.fa.fa-plus
              link new account    

    -current_user.linked_accounts.each do |link|
      .linked-account-index-item.text-center
        =link_to link do 
          .table-div{style: "width: 100%; height: 100%;"}
            .vertical-center
              %div=link.account_name
              .linked-account-index-labels
                %span.label.label-default{style: "margin: 0px 2px;"}="#{link.charges.recurring.count} recurring"
                %span.label.label-primary{style: "margin: 0px 2px;"}="0 new"